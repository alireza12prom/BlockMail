{
  "name": "blockmail",
  "version": "1.0.0",
  "description": "A decentralized email system built on Ethereum blockchain with IPFS storage",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "app:start": "npm run start -w @blockmail/app",
    "app:build": "npm run package -w @blockmail/app",
    "app:lint": "npm run lint -w @blockmail/app",
    "contracts:compile": "npm run compile -w @blockmail/contracts",
    "contracts:deploy": "npm run deploy -w @blockmail/contracts",
    "contracts:deploy:local": "npm run deploy:local -w @blockmail/contracts",
    "contracts:test": "npm run test -w @blockmail/contracts",
    "contracts:node": "npm run node -w @blockmail/contracts",
    "dev": "concurrently \"npm run contracts:node\" \"npm run app:start\"",
    "clean": "rm -rf node_modules packages/*/node_modules",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:app-build": "docker compose run --rm app-build"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "email",
    "decentralized",
    "ipfs",
    "web3",
    "electron",
    "solidity"
  ],
  "author": {
    "name": "Alireza Rezapour",
    "email": "alireza.rezapour.me@gmail.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}